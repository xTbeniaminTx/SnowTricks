{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-3 text-center">

                <img class="avatar mb-3" src="{{ asset('photos/logo/instagram_profile_image.png') }}"
                     alt="Avatar de {{ user.fullName }}">

                <br>
                <span class="badge badge-primary">{{ user.tricks  | length }} tricks</span>
            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>
            </div>
        </div>
        <hr>
        <h2>Les triks de {{ user.fullName }}</h2>
        <hr>
        {% if user.tricks|length > 0 %}
            <div class="row mb-2">
                {% for trick in user.tricks %}
                    {% include 'trick/_trick.html.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <p>
                    <strong>{{ user.fullName }}</strong> n'a pas encore d'annonce sur le site !
                </p>
            </div>
        {% endif %}
    </div>
{% endblock %}
